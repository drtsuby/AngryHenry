    "qrcode": "^1.4.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.13",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "author": "drtsuby",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
