{
  "name": "angryhenry-paint-inventory",
  "version": "1.0.0",
  "description": "AngryHenry Paint Inventory System - Professional paint management with QR codes",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
